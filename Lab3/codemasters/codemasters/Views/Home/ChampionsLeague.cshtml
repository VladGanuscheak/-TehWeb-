<h1>The list of the European Champions League cup winners in the 21 century:</h1>

<img src="https://i2-prod.mirror.co.uk/incoming/article5928368.ece/ALTERNATES/s615/EPA2015-ONE-USE.jpg" width="650" height="800" align="right">
<table border="1" cellpadding="15" cellspacing="15">
    <tr>
        <th>Team</th>
        <th>Year</th>
        <th>League</th>
    </tr>
    @foreach (var team in ViewBag.ChampionsLeagueWinners)
    {
        if (team.LeagueOrigin == "La Liga")
        {
            <tr class="TableBlueLight">
                <th>@team.name</th>
                <th>@team.year</th>
                <th>@team.LeagueOrigin</th>
            </tr>
        }
        else if (team.LeagueOrigin == "Serie A")
        {
            <tr class="TableGreen">
                <th>@team.name</th>
                <th>@team.year</th>
                <th>@team.LeagueOrigin</th>
            </tr>
        }
        else if (team.LeagueOrigin == "Ligue 1")
        {
            <tr class="TableOrange">
                <th>@team.name</th>
                <th>@team.year</th>
                <th>@team.LeagueOrigin</th>
            </tr>
        }
        else if (team.LeagueOrigin == "EPL")
        {
            <tr class="TableYellow">
                <th>@team.name</th>
                <th>@team.year</th>
                <th>@team.LeagueOrigin</th>
            </tr>
        }
        else if (team.LeagueOrigin == "Bundesliga")
        {
            <tr class="TableRed">
                <th>@team.name</th>
                <th>@team.year</th>
                <th>@team.LeagueOrigin</th>
            </tr>
        }
        else
        {
            <tr>
                <th>@team.name</th>
                <th>@team.year</th>
                <th>@team.LeagueOrigin</th>
            </tr>
        }
    }
</table>