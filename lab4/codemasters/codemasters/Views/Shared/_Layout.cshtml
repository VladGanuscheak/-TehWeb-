@using System.Web.Optimization;
@{
   /* Layout = "~/Views/Shared/_Layout_Blank.cshtml";
    ViewBag.Title = "Login";*/
}


<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>football fanclubhouse @ViewBag.Title</title>

    <link href="htpps://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet" type="text/css" />
    @Styles.Render("~/bundles/bootstrap/css")
    @Styles.Render("~/bundles/style/css")
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="~/Home/Index">Home</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="~/players/TopPlayers">Top Players <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="~/links/websites">usefull links</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Top 5 Football Leagues
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="~/Home/EPL">English Premier League(EPL)</a>
                        <a class="dropdown-item" href="~/Home/Liga_BBVA">Spanish La Liga</a>
                        <a class="dropdown-item" href="~/Home/Ligue1">French Ligue 1</a>
                        <a class="dropdown-item" href="~/Home/BUNDESLIGA">German Bundesliga</a>
                        <a class="dropdown-item" href="~/Home/Serie_A">Italian Serie A</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="~/Home/ChampionsLeague">Champions League</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link disabled" href="#">About</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>


    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block img-fluid" src="https://usatthebiglead.files.wordpress.com/2015/04/hazardunited.jpg" width="1400" height="700" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="https://www.thesportsman.com/media/images/admin/football/Griezmann_Celebration.jpg" width="1400" height="700" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block img-fluid" src="http://images.indianexpress.com/2018/01/ac-milan-m1.jpg" width="1400" height="700" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>




    <div class="container">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery/js")
    @Scripts.Render("~/bundles/bootstrap/js")
</body>
</html>
